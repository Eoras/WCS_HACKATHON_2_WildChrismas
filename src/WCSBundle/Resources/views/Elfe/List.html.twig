{% extends "WCSBundle::base.html.twig" %}
{% block titlePage %}{{ parent() }} - Admin{% endblock %}
{% block content %}
    {% for continent in continents %}
        {% for country in continent.countries %}
            {% for child in country.children %}
                {% if child.gifts|length > 0 %}
                 {{ child.name }} {{ child.firstname }}
                    {% for gift in child.gifts %}
                        {% if gift.build != 1 %}
                            <p>{{ gift.name }} {{ gift.id }}</p>
                            <form method="post" action="">
                                <input type="checkbox" name="build" value="{{ gift.id }}">
                                <input type="hidden" name="bool" value="{{ gift.build }}">
                                <button type="submit" name="submit" value="submit">submit</button>
                            </form>
                        {% endif %}
                    {% endfor %}
                {% endif %}
            {% endfor %}
        {% endfor %}
    {% endfor %}
{% endblock %}