{% extends 'base.html.twig' %}

{% block content %}
    <h1>Children list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Firstname</th>
                <th>Address</th>
                <th>City</th>
                <th>Comment</th>
                <th>Continent</th>
                <th>Ship</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for child in children %}
            <tr>
                <td><a href="{{ path('child_show', { 'id': child.id }) }}">{{ child.id }}</a></td>
                <td>{{ child.name }}</td>
                <td>{{ child.firstname }}</td>
                <td>{{ child.address }}</td>
                <td>{{ child.city }}</td>
                <td>{{ child.comment }}</td>
                <td>{{ child.country.name }}</td>
                <td>{% if child.ship %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('child_show', { 'id': child.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('child_edit', { 'id': child.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('child_new') }}">Create a new child</a>
        </li>
    </ul>
{% endblock %}
