{% extends 'base.html.twig' %}

{% block content %}
    <h1>Gifts list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Build</th>
                <th>Enfant</th>
            </tr>
        </thead>
        <tbody>
        {% for gift in gifts %}
            <tr>
                <td><a href="{{ path('gift_show', { 'id': gift.id }) }}">{{ gift.id }}</a></td>
                <td>{{ gift.name }}</td>
                <td>{% if gift.build %}Yes{% else %}No{% endif %}</td>
                <td>{{ gift.child }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
